generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DB_URL")
}
enum Role {
    ADMIN
    MANAGER
    BASIC
    VIEWER
}

enum Job {
    DELEGATE
    POLICE_AGENT
    POLICE_CLERK
    COORDINATOR
    GENERIC
    COMMISSIONED
    INTERN
    SUPERINTENDENT
    SECTION_CHIEF 
}

model User {
    id          String      @id @default(uuid())
    cpf         String
    username    String      @unique
    name        String
    password    String
    email       String      @unique
    job         Job
    role        Role
    isDeleted   Boolean     @default(false)
    firstAccess Boolean     @default(true)
    createdAt   DateTime
    updatedAt   DateTime

    @@map("user")
}